mml.ptabschema =
    mml.mtable.qname
    | mml.mtr.qname
    | mml.mlabeledtr.qname
    | mml.mtd.qname
mml.mtable.qname =
    element mtable {
        mml.PresExpression, mml.Common.attrib, mml.att-tableinfo
    }
mml.mtr.qname =
    element mtr {
        mml.PresExpression,
        mml.Common.attrib,
        mml.att-rowalign,
        mml.att-columnalign,
        mml.att-groupalign
    }
mml.mlabeledtr.qname =
    element mlabeledtr {
        mml.PresExpression,
        mml.Common.attrib,
        mml.att-rowalign,
        mml.att-columnalign,
        mml.att-groupalign
    }
mml.mtd.qname =
    element mtd {
        mml.PresExpression,
        mml.Common.attrib,
        mml.att-rowalign,
        mml.att-columnalign,
        mml.att-groupalign,
        mml.att-rowspan,
        mml.att-columnspan
    }
mml.plschema = mml.pgenschema | mml.pscrschema | mml.ptabschema
