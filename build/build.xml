<project name="html5-validator" basedir="." default="build"
  xmlns:artifact="antlib:org.apache.maven.artifact.ant">
  <property name="dist" location="dist" />
  <loadfile property="version" srcfile="VERSION" failonerror="false" />
  <property name="version" location="dev" />
  <property name="groupId" value="nu.validator" />
  <property name="artifactId" value="validator" />
  <property name="version" value="${version}" />
  <property name="src" location="../src" />
  <property name="htmlparser-src" location="../htmlparser/src" />
  <property name="jing-datatype-src" location="../jing-trang/mod/datatype/src/main" />
  <property name="jing-relaxg-validate-src" location="../jing-trang/mod/rng-validate/src/main" />
  <property name="jing-relaxg-parse-src" location="../jing-trang/mod/rng-parse/src/main" />
  <property name="jing-util-src" location="../jing-trang/mod/util/src/main" />
  <property name="jing-validate-src" location="../jing-trang/mod/validate/src/main" />
  <property name="validator-jar" value="${dist}/${artifactId}-${version}.jar" />
  <property name="javadoc-jar" value="${dist}/${artifactId}-${version}-javadoc.jar" />
  <property name="sources-jar" value="${dist}/${artifactId}-${version}-sources.jar" />
  <property name="bundle-jar" value="${dist}/${artifactId}-${version}-bundle.jar" />
  <property environment="env"/>
  <target name="build" depends="jar"/>
  <target name="clean">
    <delete dir="${dist}"/>
  </target>
  <target name="jar" depends="clean">
    <copy file="VERSION" todir="${dist}" failonerror="false" />
    <jar destfile="${dist}/vnu.jar" duplicate="preserve">
      <zipgroupfileset dir="../jars" includes="*.jar"/>
      <zipfileset src="../jing-trang/build/jing.jar"/>
      <zipfileset src="../jing-trang/lib/saxon9.jar"/>
      <zipfileset src="../jing-trang/lib/xercesImpl.jar"/>
      <zipfileset src="../jing-trang/lib/xml-apis.jar"/>
      <zipfileset src="../dependencies/commons-codec-1.9.jar"/>
      <zipfileset src="../dependencies/commons-fileupload-1.3.1.jar"/>
      <zipfileset src="../dependencies/commons-httpclient-3.1.jar"/>
      <zipfileset src="../dependencies/commons-io-2.4.jar"/>
      <zipfileset src="../dependencies/commons-logging-1.2.jar"/>
      <zipfileset src="../dependencies/commons-logging-adapters-1.1.jar"/>
      <zipfileset src="../dependencies/commons-logging-api-1.1.jar"/>
      <zipfileset src="../dependencies/galimatias-0.1.0.jar"/>
      <zipfileset src="../dependencies/icu4j-54.1.1.jar"/>
      <zipfileset src="../dependencies/javax.servlet-api-3.1.0.jar"/>
      <zipfileset src="../dependencies/jchardet-1.0.jar"/>
      <zipfileset src="../dependencies/jetty-http-9.2.9.v20150224.jar"/>
      <zipfileset src="../dependencies/jetty-io-9.2.9.v20150224.jar"/>
      <zipfileset src="../dependencies/jetty-security-9.2.9.v20150224.jar"/>
      <zipfileset src="../dependencies/jetty-server-9.2.9.v20150224.jar"/>
      <zipfileset src="../dependencies/jetty-servlet-9.2.9.v20150224.jar"/>
      <zipfileset src="../dependencies/jetty-servlets-9.2.9.v20150224.jar"/>
      <zipfileset src="../dependencies/jetty-util-9.2.9.v20150224.jar"/>
      <zipfileset src="../dependencies/jetty-util-ajax-9.2.9.v20150224.jar"/>
      <zipfileset src="../dependencies/log4j-1.2.17.jar"/>
      <zipfileset src="../dependencies/rhino-1.7R5.jar"/>
      <manifest>
        <attribute name="Main-Class" value="nu.validator.client.SimpleCommandLineValidator"/>
        <attribute name="Implementation-Title" value="The Nu Markup Checker (v.Nu)"/>
        <attribute name="Implementation-Version" value="${version}"/>
        <attribute name="Implementation-Vendor" value="http://validator.github.io/validator/"/>
      </manifest>
      <service type="org.relaxng.datatype.DatatypeLibraryFactory">
        <provider classname="com.thaiopensource.datatype.xsd.DatatypeLibraryFactoryImpl"/>
        <provider classname="nu.validator.datatype.Html5DatatypeLibraryFactory"/>
      </service>
    </jar>
  </target>
  <target name="war" depends="clean">
    <copy file="VERSION" todir="${dist}"/>
    <mkdir dir="${dist}/war" />
    <echo file="${dist}/war/web.xml" append="false"
><![CDATA[<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0">
    <display-name>validator.nu</display-name>
    <description>Mark-up validation service</description>

    <filter>
        <filter-name>gzip-filter</filter-name>
        <filter-class>org.eclipse.jetty.servlets.GzipFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>gzip-filter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>inbound-size-limit-filter</filter-name>
        <filter-class>nu.validator.servlet.InboundSizeLimitFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>inbound-size-limit-filter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>inbound-gzip-filter</filter-name>
        <filter-class>nu.validator.servlet.InboundGzipFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>inbound-gzip-filter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>multipart-form-data-filter</filter-name>
        <filter-class>nu.validator.servlet.MultipartFormDataFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>multipart-form-data-filter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>validator</servlet-name>
        <servlet-class>nu.validator.servlet.VerifierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>validator</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
]]></echo>
    <echo file="${dist}/war/log4j.xml" append="false"
><![CDATA[<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-5p %c{1} - %m%n"/>
    </layout>
  </appender>

  <root>
    <priority value ="info" />
    <appender-ref ref="console" />
  </root>

</log4j:configuration>
]]></echo>
    <unzip dest="${dist}/war/classes">
      <fileset dir="../jars">
        <include name="*.jar"/>
      </fileset>
    </unzip>
    <copy todir="${dist}/war/lib">
      <fileset file="../jing-trang/build/jing.jar"/>
      <fileset file="../jing-trang/lib/saxon9.jar"/>
      <fileset file="../jing-trang/lib/xercesImpl.jar"/>
      <fileset file="../jing-trang/lib/xml-apis.jar"/>
      <fileset file="../dependencies/commons-codec-1.9.jar"/>
      <fileset file="../dependencies/commons-fileupload-1.3.1.jar"/>
      <fileset file="../dependencies/commons-httpclient-3.1.jar"/>
      <fileset file="../dependencies/commons-io-2.4.jar"/>
      <fileset file="../dependencies/commons-logging-1.2.jar"/>
      <fileset file="../dependencies/commons-logging-adapters-1.1.jar"/>
      <fileset file="../dependencies/commons-logging-api-1.1.jar"/>
      <fileset file="../dependencies/galimatias-0.1.0.jar"/>
      <fileset file="../dependencies/icu4j-54.1.1.jar"/>
      <fileset file="../dependencies/jchardet-1.0.jar"/>
      <fileset file="../dependencies/jetty-http-9.2.9.v20150224.jar"/> <!-- GzipFilter dependency -->
      <fileset file="../dependencies/jetty-servlets-9.2.9.v20150224.jar"/> <!-- GzipFilter provider -->
      <fileset file="../dependencies/jetty-util-9.2.9.v20150224.jar"/> <!-- GzipFilter dependency -->
      <fileset file="../dependencies/log4j-1.2.17.jar"/>
      <fileset file="../dependencies/rhino-1.7R5.jar"/>
    </copy>
    <war destfile="${dist}/vnu.war" webxml="${dist}/war/web.xml">
      <lib dir="${dist}/war/lib"/>
      <classes dir="${dist}/war/classes">
        <exclude name="**/*.java"/>
      </classes>
      <classes file="${dist}/war/log4j.xml"/>
      <service type="org.relaxng.datatype.DatatypeLibraryFactory">
        <provider classname="com.thaiopensource.datatype.xsd.DatatypeLibraryFactoryImpl"/>
        <provider classname="nu.validator.datatype.Html5DatatypeLibraryFactory"/>
      </service>
    </war>
    <delete dir="${dist}/war"></delete>
  </target>
  <target name="javadoc-jar">
    <property name="javadoc-dir" value="${dist}/javadoc" />
    <javadoc destdir="${javadoc-dir}">
      <fileset dir="${src}"/>
      <fileset dir="${htmlparser-src}"/>
      <fileset dir="${jing-datatype-src}"/>
      <fileset dir="${jing-relaxg-validate-src}"/>
      <fileset dir="${jing-relaxg-parse-src}"/>
      <fileset dir="${jing-util-src}"/>
      <fileset dir="${jing-validate-src}"/>
    </javadoc>
    <jar destfile="${javadoc-jar}">
      <fileset dir="${javadoc-dir}" />
    </jar>
    <delete dir="${javadoc-dir}"/>
  </target>
  <target name="sources-jar">
    <jar destfile="${sources-jar}">
      <fileset dir="${src}"/>
      <fileset dir="${htmlparser-src}"/>
      <fileset dir="${jing-datatype-src}"/>
      <fileset dir="${jing-relaxg-validate-src}"/>
      <fileset dir="${jing-relaxg-parse-src}"/>
      <fileset dir="${jing-util-src}"/>
      <fileset dir="${jing-validate-src}"/>
    </jar>
  </target>
  <target name="artifacts" depends="clean, javadoc-jar, sources-jar">
    <artifact:pom
      id="pom"
      groupId="nu.validator"
      artifactId="validator"
      version="${version}"
      name="The Nu HTML Checker"
      description="An HTML-checking library (used by https://html5.validator.nu and the HTML5 facet of the W3C Validator)"
      url="https://validator.github.io/validator/"
      packaging="jar">
      <license
        name="The MIT License"
        distribution="repo"
        url="https://raw.githubusercontent.com/validator/validator/master/LICENSE"/>
      <scm
        connection="scm:git:git://github.com/validator/validator.git"
        developerConnection="scm:git:git://github.com/validator/validator.git"
        url="https://github.com/validator/validator"/>
      <issueManagement
        system="GitHub Issues"
        url="https://github.com/validator/validator/issues"/>
      <ciManagement
        system="Travis CI"
        url="https://travis-ci.org/validator/validator"/>
      <developer
        name="Henri Sivonen"
        id="hsivonen"
        email="hsivonen@iki.fi"
        url="https://hsivonen.iki.fi/"/>
      <developer
        name="Michael[tm] Smith"
        id="sideshowbarker"
        email="mike@w3.org"
        url="https://people.w3.org/mike/"/>
      <dependency groupId="com.ibm.icu" artifactId="icu4j" version="54.1.1"/>
      <dependency groupId="commons-codec" artifactId="commons-codec" version="1.9"/>
      <dependency groupId="commons-fileupload" artifactId="commons-fileupload" version="1.3.1"/>
      <dependency groupId="commons-httpclient" artifactId="commons-httpclient" version="3.1"/>
      <dependency groupId="commons-io" artifactId="commons-io" version="2.4"/>
      <dependency groupId="commons-logging" artifactId="commons-logging" version="1.2"/>
      <dependency groupId="commons-logging" artifactId="commons-logging-adapters" version="1.1"/>
      <dependency groupId="commons-logging" artifactId="commons-logging-api" version="1.1"/>
      <dependency groupId="io.mola.galimatias" artifactId="galimatias" version="0.1.0"/>
      <dependency groupId="isorelax" artifactId="isorelax" version="20030108"/>
      <dependency groupId="javax.servlet" artifactId="javax.servlet-api" version="3.1.0"/>
      <dependency groupId="log4j" artifactId="log4j" version="1.2.17"/>
      <dependency groupId="net.sf.saxon" artifactId="Saxon-HE" version="9.6.0-4"/>
      <dependency groupId="net.sourceforge.jchardet" artifactId="jchardet" version="1.0"/>
      <dependency groupId="org.eclipse.jetty" artifactId="jetty-http" version="9.2.9.v20150224"/>
      <dependency groupId="org.eclipse.jetty" artifactId="jetty-io" version="9.2.9.v20150224"/>
      <dependency groupId="org.eclipse.jetty" artifactId="jetty-security" version="9.2.9.v20150224"/>
      <dependency groupId="org.eclipse.jetty" artifactId="jetty-server" version="9.2.9.v20150224"/>
      <dependency groupId="org.eclipse.jetty" artifactId="jetty-servlets" version="9.2.9.v20150224"/>
      <dependency groupId="org.eclipse.jetty" artifactId="jetty-util" version="9.2.9.v20150224"/>
      <dependency groupId="org.eclipse.jetty" artifactId="jetty-util-ajax" version="9.2.9.v20150224"/>
      <dependency groupId="xerces" artifactId="xercesImpl" version="2.9.1"/>
      <dependency groupId="xml-apis" artifactId="xml-apis" version="1.0.b2"/>
      <dependency groupId="xom" artifactId="xom" version="1.2.5"/>
    </artifact:pom>
    <artifact:writepom pomRefId="pom" file="${dist}/validator-${version}.pom"/>
    <jar destfile="${validator-jar}" duplicate="preserve">
      <zipfileset src="../jars/validator.jar"/>
      <zipfileset src="../jars/htmlparser.jar"/>
      <zipfileset src="../jing-trang/build/jing.jar"/>
      <manifest>
        <attribute name="Implementation-Title" value="The Nu Markup Checker (v.Nu)"/>
        <attribute name="Implementation-Version" value="${version}"/>
        <attribute name="Implementation-Vendor" value="http://validator.github.io/validator/"/>
      </manifest>
      <service type="org.relaxng.datatype.DatatypeLibraryFactory">
        <provider classname="com.thaiopensource.datatype.xsd.DatatypeLibraryFactoryImpl"/>
        <provider classname="nu.validator.datatype.Html5DatatypeLibraryFactory"/>
      </service>
    </jar>
  </target>
  <target name="bundle" depends="artifacts">
    <jar basedir="${dist}" destfile="${bundle-jar}"/>
  </target>
  <target name="deploy" depends="artifacts"/>
</project>
